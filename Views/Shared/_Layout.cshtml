<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @RenderSection("header", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                </ul>
                @if (Session["UserNameSS"] != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Create", "Index", "InsertEmployee")</li>
                        <li>@Html.ActionLink("View", "Index", "EmployeeInsert")</li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right !important">
                        <li><p style="color:#fff;margin-top:15px;">Hello @Session["UserNameSS"]</p></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    </ul>
                }
                else if (Session["IdUsSS1"] == null)
                {
                    <ul class="nav navbar-nav" style="float:right !important">
                        <li>@Html.ActionLink("Signup", "LoginInfo1", "Home")</li>
                        <li>@Html.ActionLink("Login", "LoginInfo2", "Home")</li>
                    </ul>
                }
                @if (Session["IdUsSS1"] != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Task Report", "Index", "Task_Report")</li>
                        <li>@Html.ActionLink("Leave Request", "Index", "Leave_Request")</li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right !important">
                        <li><p style="color:#fff;margin-top:15px;">Hello @Session["IdUsSS1"]</p></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    </ul>
                }
                else if (Session["IdUsSS1"] != null&&Session["UserNameSS"] == null)
                {
                    <ul class="nav navbar-nav" style="float:right !important">
                        <li>@Html.ActionLink("Signup", "LoginInfo1", "Home")</li>
                        <li>@Html.ActionLink("Login", "LoginInfo2", "Home")</li>
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

