            @Html.ValidationMessageFor(model => model.task_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.start_date, htmlAttributes: new { @class = "control-label col-md-2" })
