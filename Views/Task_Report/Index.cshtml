@model WebApplication2.Models.Task_report

@{
    ViewBag.Title = "Create Task";
}

@if(TempData["message"]!=null)
{
    <script>alert('@TempData["message"]');
        window.location.href = "https://localhost:44327/Task_Report/Index1";
    </script>
    
}
<h2>Create New Task Report</h2>

@using (Html.BeginForm()) 
